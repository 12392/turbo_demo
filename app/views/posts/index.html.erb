<p style="color: green"><%= notice %></p>

<h1 class="text-3xl font-extrabold">Posts</h1>

<div id="posts">
  <% @posts.each do |post| %>
    <%= render post %>
    <p>
      <%= link_to "Show this post", post %>
    </p>
  <% end %>
</div>

<%= turbo_frame_tag "post_modal" do %>
  <%= link_to "New post", new_post_path, class: "underline" %>
<% end %>